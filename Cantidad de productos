#include <iostream>
using namespace std;
int main() {
	int cant,mayorp,menorp;
	float product, total=0, mayor, menor, promedio;
	do {
		cout << "Ingrese la cantidad de productos: ";
		cin >> cant;
	} while (cant <= 0);
	cout << "Ingrese la cantidad de productos para " << cant << " articulos:" << endl;
	for (int i = 1; i <= cant; i++) {
		do {
			cout << "Producto " << i << ":" << endl;
			cin >> product;
		} while (product <= 0);
		if (i == 1) {
			mayor = product;
			menor = product;
			menorp = i;
			mayorp = i;
		}
		if (product < menor) {
			menor = product;
			menorp = i;
		}
		if (product > mayor) {
			mayor = product;
			mayorp = i;
		}
		total += product;
		promedio = total / cant;
		}
	cout << "Total de productos en el inventario: " << total << endl;
	cout << "Mayor cantidad: " << mayor<<" del producto "<<mayorp << endl;
	cout << "Menor cantidad: " << menor << " del producto " << menorp << endl;
	cout << "Promedio de productos: " << promedio << endl;
	}
