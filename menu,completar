#include <iostream>

using namespace std;

int main()
{
    int opcion,N,cont=0,suma=0;
    bool band=false
    
    do{
        cout<<"Menu: "<<endl;
        cout<<"1.Suma de numeros primos\n";
        cout<<"2.Minimo Comun Multiplo (MCM)\n";
        cout<<"3.Maximo Comun Divisor (MCD)\n";
        cout<<"0.Salir\n";
        cout<<"Seleccione una opcion: ";
        cin>>opcion;
        
        switch(opcion){
            case 1. cout<<"Cuantos numeros primos a sumar: ";
            cin>>N;
            while(cont<N) {
                for(int i=1;i<=32768;i++)
                {
                    for(int j=2;j<(i-1);j++)
                    {
                        if((i%j)==0){
                            band=true;
                            break;
                        }
                    }
                    if(!band)
                    suma=suma+i;
                    band=false;
                }
        }
    }    
    

    return 0;
}
