#include <iostream>
using namespace std;

int calcular(int n);

int main()
{
	int n, suma;
	cout << "Ingrese el numero hasta el que desee sumar: ";
	cin >> n;
	suma = calcular(n);
	cout << "La suma de 1 hasta " << n << " es: " << suma;
}
int calcular(int n) {
	int sumaa = 0, i = 1;
	while (i <= n) {
		sumaa=sumaa+i;
		i++;
	}
	return sumaa;
}
