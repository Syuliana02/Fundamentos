#include <iostream>
#include<string>

using namespace std;

int main() 
{
	string frase;
	int contador = 0;

	cout << "Ingrese uns frase: ";
	getline(cin, frase);

	for (int i = 0; i < frase.length(); i++)
	{
		if (frase[i] == 'a' || frase[i] == 'e' || frase[i] == 'i' || frase[i] == 'o' || frase[i] == 'u')
		{
			contador++;
		}
	}
	cout << "El numero de vocales en la frase es: " << contador << endl;
}
