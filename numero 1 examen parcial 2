#include <iostream>
#include <math.h>
using namespace std;
int main()
{
    int n,s=0,e;
    float b;
    cout << "Ingrese un numero entero: " << endl;
    cin >> n;
    do {
        cout << "Ingrese el rango a elevar: " << endl;
        cin >> b;
    } while (b <0);
    for (int i = 1; i <= b; i++) {
        e = pow(n, i);
        s = s + e;
    }
    cout << "La suma es: " << s;
   
}
