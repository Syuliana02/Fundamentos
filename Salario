#include <iostream>
#include <string>

using namespace std;

int main()
{
    string nombre;
    int horas;
    float precio,Salario;
    cout<<"Ingrese el nombre: ";
    cin>>nombre;
    cout<<"Ingresar horas: ";
    cin>>horas;
    cout<<"Ingrese precio por hora: ";
    cin>>precio;
    Salario=precio*horas;
    if(Salario>8272)
      Salario=(Salario*0.87);
    else{
        cout<<nombre<<"Su salario es: "<<Salario;
    }  
      
      

    return 0;
}
